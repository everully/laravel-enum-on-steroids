{
    "name": "everully/laravel-on-steroids",
    "description": "Components for Laravel",
    "keywords" : [
        "everully",
        "laravel",
        "laravel-on-steroids"
    ],
    "homepage" : "https://github.com/everully/laravel-on-steroids",
    "license" : "MIT",
    "autoload": {
        "psr-4": {
            "Everully\\LaravelOnSteroids\\": "src/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "Everully\\LaravelOnSteroids\\Tests\\" : "tests/"
        }
    },
    "authors": [
        {
            "name": "everully",
            "role" : "Developer"
        }
    ],
    "require" : {
        "php": "^8.1",
        "illuminate/contracts": "^10.0|^11.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-laravel": "^2.0",
        "laravel/pint": "^1.17"
    },
    "scripts" : {
        "test" : "./vendor/bin/pest --no-coverage",
        "test-coverage" : "vendor/bin/pest --coverage-html coverage",
        "pint" : "/vendor/bin/pint"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability" : "dev",
    "prefer-stable" : true
}
